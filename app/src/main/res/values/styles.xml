<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headText">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/headText</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="editText">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/editText</item>
        <item name="android:hint">กรุณากรอกข้อมูล</item>
        <item name="android:background">@drawable/background_edit_text</item>
    </style>

    <style name="editText.short">
        <item name="android:maxLength">@dimen/length_of_edit_text_short</item>
    </style>
    <style name="editText.medium">
        <item name="android:maxLength">50</item>
    </style>
    <style name="editText.long">
        <item name="android:maxLength">@dimen/length_of_edit_text_long</item>
    </style>

</resources>
